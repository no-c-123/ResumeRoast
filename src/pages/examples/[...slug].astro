---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const examples = await getCollection('examples');
  return examples.map((ex: CollectionEntry<'examples'>) => ({
    params: { slug: ex.slug },
    props: { ex },
  }));
}

type Props = {
  ex: CollectionEntry<'examples'>;
};

const { ex } = Astro.props;
const { Content } = await ex.render();
---

<Layout>
  <div class="min-h-screen bg-black text-white pt-24 pb-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <div class="mb-8">
        <a href="/examples" class="text-neutral-500 hover:text-white transition-colors flex items-center gap-2 mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
          </svg>
          Back to Examples
        </a>
        <div class="flex items-start justify-between gap-8 flex-col md:flex-row">
          <div>
            <div class="flex gap-3 mb-3">
              <span class="px-3 py-1 rounded-full bg-orange-500/10 text-orange-500 text-sm font-medium border border-orange-500/20">
                {ex.data.industry}
              </span>
              <span class="px-3 py-1 rounded-full bg-neutral-800 text-neutral-400 text-sm font-medium border border-white/10">
                {ex.data.level}
              </span>
            </div>
            <h1 class="text-4xl font-bold mb-2">{ex.data.role} Resume Example</h1>
            <p class="text-neutral-400 max-w-2xl">{ex.data.description}</p>
          </div>
          <a href="/resume-builder" class="bg-white text-black font-bold px-6 py-3 rounded-xl hover:bg-neutral-200 transition-colors flex-shrink-0">
            Use This Template
          </a>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Resume Preview -->
        <div class="lg:col-span-2 bg-white text-black rounded-lg shadow-2xl p-8 min-h-[800px]">
           <Content />
        </div>

        <!-- Sidebar Analysis -->
        <div class="space-y-6">
          <div class="bg-neutral-900/50 border border-white/10 rounded-2xl p-6">
            <h3 class="text-lg font-bold mb-4 flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-green-500">
                <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12zm13.36-1.814a.75.75 0 10-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 00-1.06 1.06l2.25 2.25a.75.75 0 001.14-.094l3.75-5.25z" clip-rule="evenodd" />
              </svg>
              Why this works
            </h3>
            <ul class="space-y-3 text-sm text-neutral-400">
              <li class="flex gap-2">
                <span class="text-white font-medium">1.</span>
                <span>Uses standard headings that ATS can easily parse.</span>
              </li>
              <li class="flex gap-2">
                <span class="text-white font-medium">2.</span>
                <span>Includes industry-specific keywords like {ex.data.keySkills[0]} and {ex.data.keySkills[1]}.</span>
              </li>
              <li class="flex gap-2">
                <span class="text-white font-medium">3.</span>
                <span>Quantifies achievements with numbers and percentages.</span>
              </li>
            </ul>
          </div>

          <div class="bg-neutral-900/50 border border-white/10 rounded-2xl p-6">
            <h3 class="text-lg font-bold mb-4">Key Skills Included</h3>
            <div class="flex flex-wrap gap-2">
              {ex.data.keySkills.map((skill: string) => (
                <span class="px-2 py-1 bg-white/5 border border-white/10 rounded-xs text-xs text-neutral-300">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</Layout>
