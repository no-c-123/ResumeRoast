---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

const examples = await getCollection('examples');

const allIndustries = ['All', ...new Set(examples.map((e: CollectionEntry<'examples'>) => e.data.industry))];
---

<Layout>
  <div class="min-h-screen bg-black text-white pt-24 pb-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 pt-12 bg-gradient-to-r from-orange-500 to-orange-300 bg-clip-text text-transparent">
          Resume Examples
        </h1>
        <p class="text-neutral-400 text-lg max-w-2xl mx-auto">
          ATS-friendly resume templates and examples for every industry. See what works and adapt it to your own career story.
        </p>
      </div>

      <!-- Filters (Visual only for now) -->
      <div class="flex flex-wrap justify-center gap-3 mb-12">
        {allIndustries.map((filter, i) => (
          <button class={`px-4 py-2 rounded-full text-sm font-medium transition-colors ${i === 0 ? 'bg-orange-500 text-white' : 'bg-neutral-900 text-neutral-400 hover:text-white border border-white/10'}`}>
            {filter}
          </button>
        ))}
      </div>

      <!-- Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {examples.map((ex: CollectionEntry<'examples'>) => (
          <div class="bg-neutral-900/50 border border-white/10 rounded-2xl p-6 hover:border-orange-500/50 transition-all group">
            <div class="aspect-[3/4] bg-white/5 rounded-lg mb-6 relative overflow-hidden">
               <!-- Mock Resume Preview -->
               <div class="absolute inset-4 bg-white/10 rounded flex flex-col gap-2 p-2 opacity-50">
                  <div class="h-2 w-1/3 bg-white/20 rounded"></div>
                  <div class="h-1 w-full bg-white/10 rounded mt-2"></div>
                  <div class="h-1 w-full bg-white/10 rounded"></div>
                  <div class="h-1 w-2/3 bg-white/10 rounded"></div>
                  <div class="h-2 w-1/4 bg-white/20 rounded mt-4"></div>
                  <div class="h-1 w-full bg-white/10 rounded"></div>
                  <div class="h-1 w-full bg-white/10 rounded"></div>
               </div>
               <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                  <a href={`/examples/${ex.slug}`} class="bg-orange-500 text-white px-4 py-2 rounded-lg font-medium text-sm">View Example</a>
               </div>
            </div>
            <h3 class="text-xl font-bold mb-1">{ex.data.role}</h3>
            <div class="flex gap-2 text-xs text-neutral-500">
              <span>{ex.data.level}</span>
              <span>â€¢</span>
              <span>{ex.data.industry}</span>
            </div>
          </div>
        ))}
      </div>
      
      <div class="mt-16 text-center">
        <p class="text-neutral-400 mb-6">Ready to create your own?</p>
        <a href="/resume-builder" class="inline-flex items-center justify-center px-8 py-3 bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 rounded-xl text-white font-semibold transition-all">
          Build My Resume
        </a>
      </div>

    </div>
  </div>
</Layout>
