---
import Layout from '../layouts/Layout.astro';

const tips = [
  {
    title: "Tailor Your Resume for Every Job",
    content: "Don't send the same generic resume to every employer. Use keywords from the job description to pass the ATS scan."
  },
  {
    title: "Quantify Your Achievements",
    content: "Instead of saying 'Managed a team', say 'Managed a team of 10 and increased productivity by 20%'."
  },
  {
    title: "Keep it Concise",
    content: "Recruiters spend an average of 7 seconds scanning a resume. Keep yours under 2 pages and use bullet points."
  },
  {
    title: "Use Active Verbs",
    content: "Start your bullet points with strong action verbs like 'Led', 'Developed', 'Created', rather than 'Responsible for'."
  },
  {
    title: "Proofread Everything",
    content: "Typos can ruin your chances. Read your resume backwards or ask a friend to review it before submitting."
  },
  {
    title: "Optimize Your LinkedIn",
    content: "Your resume gets you the interview, but your LinkedIn profile validates your professional brand. Keep them consistent."
  }
];
---

<Layout>
  <div class="min-h-screen bg-black text-white pt-24 pb-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 pt-12 bg-gradient-to-r from-orange-500 to-orange-300 bg-clip-text text-transparent">
          Career Tips
        </h1>
        <p class="text-neutral-400 text-lg max-w-2xl mx-auto">
          Master the job search with our expert career advice. Small changes can make a big difference.
        </p>
      </div>

      <!-- Tips List -->
      <div class="space-y-6">
        {tips.map((tip, index) => (
          <div class="bg-neutral-900/50 border border-white/10 rounded-2xl p-6 md:p-8 flex gap-6 hover:border-orange-500/50 transition-colors">
            <div class="flex-shrink-0 w-10 h-10 bg-orange-500/10 rounded-full flex items-center justify-center text-orange-500 font-bold text-lg border border-orange-500/20">
              {index + 1}
            </div>
            <div>
              <h3 class="text-xl font-bold mb-2 text-white">{tip.title}</h3>
              <p class="text-neutral-400 leading-relaxed">
                {tip.content}
              </p>
            </div>
          </div>
        ))}
      </div>

      <!-- Call to Action -->
      <div class="mt-16 mb-12 p-8 bg-gradient-to-b from-neutral-900 to-black border border-white/10 rounded-3xl text-center">
        <h3 class="text-2xl font-bold mb-4">Want personalized advice?</h3>
        <p class="text-neutral-400 mb-8">
          Our AI analyzes your specific resume against job descriptions to give you tailored feedback.
        </p>
        <a href="/" class="inline-block px-8 py-3 bg-white text-black font-bold rounded-xl hover:bg-neutral-200 transition-colors">
          Analyze My Resume
        </a>
      </div>

    </div>
  </div>
</Layout>
